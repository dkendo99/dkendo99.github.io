    <script>
        $(document).ready(function(){
            $('#translate').click(function(){
                if ($('html').attr('lang') == 'en') {
                    $('html').attr('lang', 'de');
                    $('#home h2').text('Willkommen');
                    $('#home p').text('Willkommen auf der Hochzeitswebsite von David und Naja! Wir freuen uns, unseren besonderen Tag mit Ihnen zu feiern.');
                    $('#gifts h2').text('Geschenke');
                    $('#gifts p').text('Vielen Dank, dass Sie darüber nachdenken, uns ein Geschenk zu machen. Ihre Anwesenheit bei unserer Hochzeit ist das größte Geschenk von allen, aber wenn Sie auf eine andere Weise beitragen möchten, haben wir ein Register bei [Register Store Name] erstellt.');
                    $('#travel h2').text('Reisen');
                    $('#travel p').text('Wenn Sie von außerhalb der Stadt anreisen, haben wir spezielle Tarife mit nahegelegenen Hotels vereinbart. Bitte besuchen Sie unsere Unterbringungsseite für weitere Informationen.');
                    $('#accommodation h2').text('Unterkunft');
                    $('#accommodation p').text('Wir haben einen Block Zimmer im [Hotel Name] für unsere Gäste reserviert. Bitte geben Sie unsere Namen bei der Buchung an, um den ermäßigten Preis zu erhalten.');
                    $('#info h2').text('Zusätzliche Informationen');
                    $('#info p').text('Für weitere Details zu unserem Hochzeitstag, Kleidung, Parken und mehr besuchen Sie bitte unsere Hochzeitswebsite unter [Website URL].');
                    $(this).text('Translate back');
                } else {
                    $('html').attr('lang', 'en');
                    $('#home h2').text('Welcome');
                    $('#home p').text('Welcome to the wedding website of David and Naja! We are excited to celebrate our special day with you.');
                    $('#gifts h2').text('Gifts');
                    $('#gifts p').text('Thank you for considering giving us a gift. Your presence at our wedding is the greatest gift of all, but if you wish to contribute in another way, we have created a registry at [Registry Store Name].');
                    $('#travel h2').text('Travel');
                    $('#travel p').text('If you are traveling from out of town, we have arranged special rates with nearby hotels. Please visit our Accommodation page for more information.');
                    $('#accommodation h2').text('Accommodation');
                    $('#accommodation p').text('We have reserved a block of rooms at [Hotel Name] for our guests. Please mention our names when booking to receive the discounted rate.');
                    $('#info h2').text('Extra Information');
                    $('#info p').text('For additional details about our wedding day, attire, parking, and more, please visit our wedding website at [Website URL].');
                    $(this).text('Translate');
                }
            });
        });
    </script>
